{
  "tasks": {
    "start": "deno run --allow-net main.ts",
    "dev": "deno run --watch --allow-net main.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false
  },
  "lint": {
    "files": {
      "include": ["main.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
